#!/bin/bash

REMOTE=origin
BRANCH=master
LOCAL=false

while getopts "b:r:l" OPTION; do
    case $OPTION in
        b) BRANCH=$OPTARG ;;
        r) REMOTE=$OPTARG ;;
        l) LOCAL=true ;;
        *) usage ;;
    esac
done
shift $((OPTIND -1))

EMAIL=`git config user.email`

if [ "$LOCAL" == "true" ] ; then
    TARGET=master
else
    TARGET="$REMOTE/$BRANCH"
fi

echo "Showing log of local workspace compared to $TARGET"
git log --oneline $TARGET...HEAD --author="$EMAIL"
